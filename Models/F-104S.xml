<?xml version="1.0"?>

<PropertyList>

  <path>F-104S.ac</path>
  
  <effect>
    <inherits-from>Aircraft/F-104/Models/Effects/ext-glass</inherits-from>
    <object-name>left-front-canopy-glass</object-name>
    <object-name>right-front-canopy-glass</object-name>
    <object-name>center-front-canopy-glass</object-name>
    <object-name>mid-canopy-glass</object-name>
    <object-name>back-canopy-glass</object-name>
  </effect>
  
  <animation>
    <object-name>wingtip-tank-left</object-name>
    <object-name>wingtip-tank-right</object-name>
    <type>select</type>
	<condition>
	  <equals>
	    <property>payload/ext-tanks/wingtip-tanks</property>
	    <value>1</value>
	  </equals>
    </condition>
  </animation>
  
  <animation>
    <object-name>underwing-tank-left</object-name>
    <object-name>underwing-tank-right</object-name>
    <type>select</type>
	<condition>
	  <equals>
	    <property>payload/ext-tanks/under-wing-tanks</property>
	    <value>1</value>
	  </equals>
    </condition>
  </animation>
  
</PropertyList>