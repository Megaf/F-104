<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <name>enginestart</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>

    <empty><stretch>true</stretch></empty>

    <text>
      <label>Engine Control</label>
    </text>

    <empty><stretch>true</stretch></empty>

  </group>

  <hrule/>

  <group>
    <layout>table</layout>
    <default-padding>10</default-padding>
    <!-- Start engine button -->
    <button>
      <row>0</row>
      <col>0</col>
      <legend>Start</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine/cutoff</property>
        <value>0</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/fdm/jsbsim/propulsion/set-running</property>
        <value>0</value>
      </binding>

<!-- TODO
      <binding>
        <visible>
          <less-than>
            <property>/fdm/jsbsim/propulsion/engine/n2</property>
            <value type="double">10.0</value>
          </less-than>
        </visible>
        <command>property-assign</command>
        <property>/sim/screen/yellow</property>
        <value>Engine Started</value>
      </binding>
-->

      <color>
        <red>0.29</red>
        <green>1</green>
        <blue>0.29</blue>
      </color>

      <color>
        <condition>
          <greater-than>
            <property>/fdm/jsbsim/propulsion/engine/n2</property>
            <value type="double">50</value>
          </greater-than>
        </condition>
        <red>1</red>
        <green>0</green>
        <blue>0</blue>
      </color>
    </button>

    <!-- Stop engine button -->
    <button>
      <row>0</row>
      <col>1</col>
      <legend>Stop</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine/cutoff</property>
        <value>1</value>
      </binding>
      <color>
        <red>1</red>
        <green>0.29</green>
        <blue>0.29</blue>
      </color>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>table</layout>
    <default-padding>1</default-padding>
    <halign>fill</halign>

    <!-- Close dialog button -->
    <button>
      <legend>Close</legend>
      <keynum>27</keynum>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <empty><stretch>true</stretch></empty>

</PropertyList>
