<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <name>enginestart</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>

    <text>
      <label>Engine Start</label>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <group>
    <layout>table</layout>
    <button>
      <row>0</row>
      <col>0</col>
      <legend>Start</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine/cutoff</property>
        <value>0</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/fdm/jsbsim/propulsion/set-running</property>
        <value>0</value>
      </binding>
      <color>
        <red>0.29</red>
        <green>1</green>
        <blue>0.29</blue>
      </color>
    </button>

    <button>
      <row>0</row>
      <col>1</col>
      <legend>Stop</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine/cutoff</property>
        <value>1</value>
      </binding>
      <color>
        <red>1</red>
        <green>0.29</green>
        <blue>0.29</blue>
      </color>
    </button>
  </group>

  <empty>
    <stretch>1</stretch>
  </empty>

  <hrule/>

<!-- TODO
