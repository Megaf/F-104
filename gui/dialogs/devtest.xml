<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <name>devtest</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <empty><stretch>true</stretch></empty>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>
    <text><label>DevTest Dialog</label></text>
    <empty><stretch>true</stretch></empty>
  </group>
  <hrule/>

  <group>
    <layout>table</layout>
    <default-padding>10</default-padding>
    <button>
      <pref-width>90</pref-width>
      <pref-height>30</pref-height>
      <row>0</row>
      <col>0</col>
      <legend>NWS</legend>
      <binding>
        <command>property-toggle</command>
        <property>/fdm/jsbsim/systems/NWS/engaged</property>
        <value>0</value>
        <value>1</value>
      </binding>
    </button>
  </group>

  <hrule/>
  <group>
    <layout>table</layout>
    <default-padding>1</default-padding>
    <halign>fill</halign>

    <!-- Close dialog button -->
    <button>
      <pref-width>90</pref-width>
      <pref-height>30</pref-height>
      <legend>Close</legend>
      <keynum>27</keynum>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>
<empty><stretch>true</stretch></empty>
</PropertyList>

